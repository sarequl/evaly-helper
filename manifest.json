{
	"name": "Evaly helper",
	"version": "2.3.0",
	"manifest_version": 2,
	"description": "Evaly helper",
	"homepage_url": "https://github.com/shahriar-shojib/evaly-helper",

	"permissions": ["notifications", "alarms", "storage", "cookies", "https://evaly.com.bd/"],

	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},

	"browser_action": {
		"default_popup": "popup/index.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"scripts": ["background/app.js"],
		"persistent": false
	}
}
